{
  "info": {
    "name": "LocalHands - WhatsApp OTP Authentication",
    "description": "Complete API collection for testing WhatsApp OTP login/registration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Request OTP (New User)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+919876543210\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/mobile-auth/request-otp",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "mobile-auth", "request-otp"]
        },
        "description": "Request OTP via WhatsApp. Replace phone number with yours in E.164 format (+919876543210)"
      },
      "response": []
    },
    {
      "name": "2. Verify OTP & Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+919876543210\",\n  \"otp\": \"123456\",\n  \"name\": \"John Doe\",\n  \"role\": \"customer\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/mobile-auth/verify-register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "mobile-auth", "verify-register"]
        },
        "description": "Verify OTP and complete registration. Replace OTP with the code received via WhatsApp. Role can be 'customer' or 'provider'."
      },
      "response": []
    },
    {
      "name": "3. Request OTP (Existing User)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+919876543210\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/mobile-auth/request-otp",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "mobile-auth", "request-otp"]
        },
        "description": "Request OTP for login (same endpoint, but for existing user)"
      },
      "response": []
    },
    {
      "name": "4. Verify OTP & Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+919876543210\",\n  \"otp\": \"654321\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/mobile-auth/verify-login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "mobile-auth", "verify-login"]
        },
        "description": "Verify OTP and login existing user. Returns JWT token."
      },
      "response": []
    },
    {
      "name": "5. Resend OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+919876543210\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/mobile-auth/resend-otp",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "mobile-auth", "resend-otp"]
        },
        "description": "Resend OTP if user didn't receive it or it expired"
      },
      "response": []
    },
    {
      "name": "6. Get User Profile (Protected)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer YOUR_JWT_TOKEN_HERE"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/api/users/me",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "users", "me"]
        },
        "description": "Test authenticated endpoint. Replace YOUR_JWT_TOKEN_HERE with token from login/register response."
      },
      "response": []
    }
  ]
}
