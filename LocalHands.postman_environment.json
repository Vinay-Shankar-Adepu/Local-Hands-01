{
  "info": {
    "name": "LocalHands API",
    "_postman_id": "localhands-collection-123",
    "description": "API collection for LocalHands MERN project",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/"
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Aarav\",\n  \"email\": \"aarav@test.com\",\n  \"password\": \"pass123\",\n  \"phone\": \"9991112222\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/register"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"aarav@test.com\",\n  \"password\": \"pass123\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let data = pm.response.json();",
                  "if (data.token) {",
                  "  pm.environment.set('token', data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Set Role",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"role\": \"provider\"\n}" },
            "url": "{{baseUrl}}/api/auth/set-role"
          }
        },
        {
          "name": "Me (Get Profile)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/auth/me"
          }
        }
      ]
    },
    {
      "name": "Providers",
      "item": [
        {
          "name": "Update Location",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"lng\": 78.4867,\n  \"lat\": 17.3850\n}"
            },
            "url": "{{baseUrl}}/api/providers/location"
          }
        },
        {
          "name": "Set Availability",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"isAvailable\": true\n}" },
            "url": "{{baseUrl}}/api/providers/availability"
          }
        },
        {
          "name": "Nearby Providers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/providers/nearby?lng=78.4867&lat=17.3850&radiusKm=5",
              "host": ["{{baseUrl}}"],
              "path": ["api", "providers", "nearby"],
              "query": [
                { "key": "lng", "value": "78.4867" },
                { "key": "lat", "value": "17.3850" },
                { "key": "radiusKm", "value": "5" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"serviceId\": \"SERVICE_OBJECT_ID\",\n  \"lng\": 78.49,\n  \"lat\": 17.39\n}"
            },
            "url": "{{baseUrl}}/api/bookings/create"
          }
        },
        {
          "name": "Accept Booking (Provider)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/api/bookings/BOOKING_ID/accept"
          }
        },
        {
          "name": "My Bookings",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/bookings/mine"
          }
        }
      ]
    }
  ]
}
